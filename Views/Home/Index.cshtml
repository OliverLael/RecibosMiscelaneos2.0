@{
    ViewData["Title"] = "Home - Sistema de Almacén DENSO";
    Layout = "_Layout"; // Usa el layout vacío sin navbar ni footer
}

<div class="split-screen">
    <!-- Sección de la imagen -->
    <div class="image-section">
        <img src="~/Images/FondoLogin.png" alt="Imagen de fondo">
    </div>

    <!-- Sección del contenido -->
    <div class="content-section">
        <div class="container">
            <!-- Header -->
            <header class="header">
                <img src="~/Images/LogoDX-MXA2624.png" alt="Logo" class="logo">
                <h1>Recibos - Misceláneos</h1>
            </header>

            <!-- Main Content -->
            <main class="main-content">
                <p class="welcome-text">Gestiona tus recibos de manera sencilla y eficiente.</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Home" asp-action="Dashboard" class="btn-primary">
                        Ir al Dashboard
                    </a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Login" class="btn-primary">
                        Iniciar Sesión
                    </a>
                }
            </main>

            <!-- Información adicional -->
            <section class="info-section">
                <h2>¿Qué puedes hacer aquí?</h2>
                <ul class="info-list">
                    <li>✔ Registrar y gestionar recibos de misceláneos.</li>
                    <li>✔ Validar la recepción de materiales.</li>
                    <li>✔ Confirmar la entrega de materiales a los usuarios.</li>
                    <li>✔ Acceder a reportes y estadísticas.</li>
                </ul>
            </section>

            <!-- Footer -->
            <footer class="footer">
                <p>&copy; MTS DX</p>
            </footer>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}