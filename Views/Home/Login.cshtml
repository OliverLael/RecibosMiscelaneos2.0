@model RecibosMiscelaneos2._0.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout"; // Usa el layout sin navbar
}

<div class="login-background">
    <div class="login-container">
        <div class="login-header">
            <img src="~/Images/LogoDX-MXA2624.png" alt="Logo DX" class="login-logo" />
            <h1>Iniciar Sesión</h1>
        </div>

        <div class="login-main">
            <form asp-action="Login" method="post" class="login-form">
                <div asp-validation-summary="ModelOnly" class="alert"></div>

                <div class="form-group">
                    <label asp-for="Username">Usuario</label>
                    <input asp-for="Username" placeholder="Ingrese su usuario" autocomplete="username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Contraseña</label>
                    <input asp-for="Password" placeholder="Ingrese su contraseña" autocomplete="current-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="remember-me">
                    <input asp-for="RememberMe" type="checkbox" id="rememberMe" />
                    <label for="rememberMe">Recordarme</label>
                </div>

                <button type="submit" class="btn-login">Ingresar</button>
            </form>

            <div class="login-footer">
                <small>Usuario de prueba: admin | Contraseña: admin123</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
}